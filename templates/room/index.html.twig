{% extends 'base.html.twig' %}

{% block title %}Hello RoomController!{% endblock %}

{% block body %}

    <div>
        <h1>Chat rooms</h1>

        <ul>
            {% for room in rooms %}
                <li>
                    <a href="{{ url('rooms_see', {id: room.id}) }}">
                        {{ room.id }} - {{ room.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div>
            <h2>Add a room</h2>
            <form action="{{ url('rooms_create') }}" method="post">
                <button>Create</button>
            </form>
        </div>
    </div>
{% endblock %}
